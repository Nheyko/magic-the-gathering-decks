{% extends 'connected_user_nav.html.twig' %}

{% block title %}Decks - {{ parent() }}{% endblock %}

{% block main %}

    {% if not decks %}
        Please create a deck for start !
    {% endif %}

    {% for deck in decks %}

        <div class="row">
            <div class="col s12 m6">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">{{ deck.name }}</span>
                    </div>
                    <div class="card-action">
                        <a href="{{ path('deck_show', {'name' : deck.name }) }}">View full deck</a>
                    </div>
                </div>
            </div>
        </div>

    {% endfor %}

    <a href="{{ path('deck_new') }}">
        <button class="btn">Create a deck</button>
    </a>

{% endblock %}
